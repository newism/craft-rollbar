{
    "name": "newism/craft-rollbar",
    "description": "Rollbar integration for CraftCMS",
    "type": "craft-plugin",
    "keywords": [
        "craft",
        "cms",
        "craftcms",
        "craft-plugin",
        "rollbar"
    ],
    "support": {
        "docs": "https://github.com/newism/craft-rollbar/blob/master/README.md",
        "issues": "https://github.com/newism/craft-rollbar/issues",
        "changelog": "https://github.com/newism/craft-rollbar/blob/master/CHANGELOG.md"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Newism",
            "homepage": "https://newis.com.au"
        }
    ],
    "require": {
        "php": ">=8.0.2 <9.0",
        "craftcms/cms": "^4.0.0-alpha.1",
        "rollbar/rollbar": "^3.0"
    },
    "autoload": {
        "psr-4": {
          "newism\\rollbar\\": "src/"
        }
    },
    "extra": {
        "name": "Rollbar",
        "handle": "newism-rollbar",
        "hasCpSettings": true,
        "hasCpSection": false
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
